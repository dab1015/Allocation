    <link href="~/jquery-ui-1.13.2.custom/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/jquery-ui-1.13.2.custom/jquery-ui.min.js"></script>


    <script>

        $(document).ready(function () {

            $('#dataTable').DataTable({

                dom: 'Bfrtip',
                buttons: [

                    {
                        extend: 'copy',
                        title: 'SKUs with Zero OH in Clubs'
                    },
                    {
                        extend: 'csv',
                        title: 'SKUs with Zero OH in Clubs'
                    },
                    {
                        extend: 'excel',
                        title: 'SKUs with Zero OH in Clubs'
                    },
                    {
                        extend: 'pdfHtml5',
                        orientation: 'landscape',
                        title: 'SKUs with Zero OH in Clubs',
                        pageSize: 'LEGAL'
                    },
                    {
                        extend: 'print',
                        title: 'SKUs with Zero OH in Clubs'

                    }


                ],
                paging: false,
            });
        });



    </script>


    <script>
        $(function () {
            $('#to').datepicker();
            $('#from').datepicker();

        })

    </script>



}




